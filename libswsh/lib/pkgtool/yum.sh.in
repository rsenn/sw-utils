# yum_deps <package-name>
#
# Show dependencies
# -------------------------------------------------------------------------
yum_deps()
{
	yum deplist "$@" | sed -n "1d
  s/^/$SPACE/
  s/ [^ ]*$//
  s/package: //p
  s/provider: //p 
" | uniq
}

# yum_deps_recursive <package-names...>
#
# Show dependencies
# -------------------------------------------------------------------------
yum_deps_recursive()
{ 
	yum_deps "$@" | (IFS="
"; while read -r DEP; do
     SPACE=${DEP%%[! ]}
     echo "$DEP"
     yum_deps "${DEP#$SPACE}"
   done)
}

