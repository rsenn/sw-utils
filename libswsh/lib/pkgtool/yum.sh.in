# yum_search [-q] <search-tokens...>
#
# Search for a package...
# -------------------------------------------------------------------------
yum_search()
{
 (filter="cat" IFS=" "
  case $1 in
    -q) 
      filter="sed s/\s\+:\s\+.*//"
      shift 
    ;;
  esac
	yum search "$@" | $filter)
}

