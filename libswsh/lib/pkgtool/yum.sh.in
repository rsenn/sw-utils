# yum_list
#
# List all known packages...
# -------------------------------------------------------------------------
yum_list()
{
  (case "$1" in
		-V | --no-version*) NOVER=true; shift ;;
	  *) break ;;
  esac
  yum list "${@:-all}" 2>/dev/null | (IFS=" $tabstop"
  while read -r NAME VERSION INFO; do

		[ -z "$VERSION" -a -z "$INFO" ] && read -r VERSION INFO
    ARCH=${NAME##*.}
    NAME=${NAME%.*}
    #var_dump NAME VERSION ARCH 1>&2
    [ "$NAME" = "$ARCH" ] && continue
    [ "$NAME" = "Loaded" -a "$VERSION" = "plugins:" -a "$ARCH" = "Loaded" ] && continue
		[ "$NOVER" = true ] &&
      printf "%s.%s\n" "$NAME" "$ARCH" ||
      printf "%s-%s.%s\n" "$NAME" "$VERSION" "$ARCH"
  done) )
}

# yum_search [-q] <search-tokens...>
#
# Search for a package...
# -------------------------------------------------------------------------
yum_search()
{
 (filter="1d ;; 2d" IFS=" "
  case $1 in
    -q) 
      filter="${filter:+$filter ;; }s/\s\+:\s\+.*//"
      shift 
    ;;
  esac
	filter="$filter ;; /^[^ ].* : / {
	  s|\s\+:\s\+| - |
		:lp
		N
		/\\n[ \\t][^\\n]*\$/ b lp
		s|\\n[\\.\\t ]\\+:\\s*| |g
		P
		D
	}
	/^===============================/d
	\\|^\\s*\$|d
	\$ d"
	[ -z "$*" ] && set -- all
	yum search "$@" | sed "$filter")
}

