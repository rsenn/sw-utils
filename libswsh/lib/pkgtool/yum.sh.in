# yum_list
#
# List all known packages...
# -------------------------------------------------------------------------
yum_list()
{
  yum_search all
}

# yum_search [-q] <search-tokens...>
#
# Search for a package...
# -------------------------------------------------------------------------
yum_search()
{
 (filter="1d ;; 2d" IFS=" "
  case $1 in
    -q) 
      filter="${filter:+$filter ;; }s/\s\+:\s\+.*//"
      shift 
    ;;
  esac
	filter="$filter ;; /^[^ ].* : / {
	  s|\s\+:\s\+| - |
		:lp
		N
		/\\n[ \\t][^\\n]*\$/ b lp
		s|\\n[\\.\\t ]\\+:\\s*| |g
		P
		D
	}
	/^===============================/d
	\\|^\\s*\$|d
	\$ d"
	[ -z "$*" ] && set -- all
	yum search "$@" | sed "$filter")
}

